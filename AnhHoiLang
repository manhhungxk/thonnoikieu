<script>
const API_KEY = "AIzaSyBepEhhvIB9HZwPSZrsyDqva3lb7-Ucres";
const FOLDER_ID = "1DSlYutCYRzhSGxRZEmiVeKmvkq4EBCEg";

fetch(`https://www.googleapis.com/drive/v3/files?q='${FOLDER_ID}'+in+parents&key=${API_KEY}&fields=files(id,name)`)
.then(r => r.json())
.then(d => {
  const g = document.getElementById("gallery");
  d.files.forEach(f => {
    const img = document.createElement("img");
    img.src = `https://drive.google.com/uc?id=${f.id}`;
    img.onclick = () => {
      document.getElementById("lightboxImg").src = img.src;
      document.getElementById("lightbox").style.display = "flex";
    };
    g.appendChild(img);
  });
});
</script>

